@model Hand

<div class="hand mb-4">
    @for (int i = 0; i < Model.Count; i++)
    {
        if (i == 0 && Model.HideHoleCard)
        {
            // hide hold card (first card)
            <img src="~/images/back.svg" />
        }
        else
        {
            Card card = Model.Cards[i];
            <img src="~/images/@(card.Name).svg" />
        }
    }
</div>
